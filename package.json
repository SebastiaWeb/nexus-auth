{
  "name": "@nexusauth/source",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "typecheck": "nx run-many -t typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "optimize-packages": "node scripts/optimize-packages.js",
    "version:patch": "pnpm version patch --no-git-tag-version && pnpm -r version patch --no-git-tag-version",
    "version:minor": "pnpm version minor --no-git-tag-version && pnpm -r version minor --no-git-tag-version",
    "version:major": "pnpm version major --no-git-tag-version && pnpm -r version major --no-git-tag-version",
    "release": "semantic-release",
    "prepare": "husky install || true",
    "prepublishOnly": "pnpm build && pnpm optimize-packages"
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "husky": "^8.0.3",
    "semantic-release": "^22.0.12",
    "@nx/js": "21.5.3",
    "@nx/vite": "21.5.3",
    "@nx/web": "21.5.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "20.19.9",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.3.1",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "nx": "21.5.3",
    "prettier": "^2.6.2",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "verdaccio": "^6.0.5",
    "vite": "^7.0.0",
    "vite-plugin-dts": "~4.5.0",
    "vitest": "^1.3.1"
  },
  "nx": {
    "includedScripts": [],
    "targets": {
      "local-registry": {
        "executor": "@nx/js:verdaccio",
        "options": {
          "port": 4873,
          "config": ".verdaccio/config.yml",
          "storage": "tmp/local-registry/storage"
        }
      }
    }
  }
}
